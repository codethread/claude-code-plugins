{
  "name": "claude-code-plugins",
  "version": "1.0.0",
  "description": "A local plugin marketplace for Claude Code",
  "private": true,
  "type": "module",
  "workspaces": [
    "lib",
    "plugins/*",
    ".claude/hooks"
  ],
  "scripts": {
    "build": "bun --filter '*' build",
    "postbuild": "bun scripts/clean-build-artifacts.ts",
    "check": "biome check --fix --unsafe .",
    "lint": "biome lint --fix --unsafe .",
    "format": "biome format --fix .",
    "verify": "bun run lint && bun run typecheck",
    "typecheck": "tsc --build"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.1"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.37",
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "typescript": "^5.7.2"
  },
  "author": "codethread",
  "license": "MIT"
}
