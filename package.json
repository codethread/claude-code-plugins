{
  "name": "claude-code-plugins",
  "version": "1.0.0",
  "description": "A local plugin marketplace for Claude Code",
  "private": true,
  "type": "module",
  "workspaces": [
    "plugins/*/hooks",
    "plugins/*/skills/*/scripts"
  ],
  "scripts": {
    "check": "bun run typecheck && bun run lint",
    "lint": "biome check --fix --unsafe .",
    "format": "biome format --fix .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "typescript": "^5.7.2"
  },
  "author": "codethread",
  "license": "MIT"
}
