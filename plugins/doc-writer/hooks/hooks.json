{
  "description": "Auto-suggests doc-writer skill when markdown files are modified",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/doc-writer-suggest.ts",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
