{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"files": {
		"include": ["src/**/*.ts", "scripts/**/*.ts", "*.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"bracketSpacing": false
		}
	}
}
